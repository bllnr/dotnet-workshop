{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch SampleConsoleApp",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/SampleConsoleApp/bin/Debug/net8.0/SampleConsoleApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SampleConsoleApp",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "SampleApiCallApp Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/SampleApiCallApp/bin/Debug/net8.0/SampleApiCallApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SampleApiCallApp",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "SampleAngularApp Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/SampleAngularApp/bin/Debug/net8.0/SampleAngularApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SampleAngularApp",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
    
}
